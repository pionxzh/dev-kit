{
  "name": "@textea/shared",
  "version": "0.4.0",
  "description": "Type definitions for Textea packages",
  "license": "MIT",
  "repository": "https://github.com/TexteaInc",
  "bugs": {
    "url": "https://github.com/TexteaInc/shared/issues"
  },
  "homepage": "https://github.com/TexteaInc/shared#readme",
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:dev": "tsc -w",
    "doc": "typedoc --json docs/typedoc-out.json src/index.ts && node scripts/docs-build.mjs",
    "prepare": "husky install",
    "lint:check": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "changelog": "git-cliff --output CHANGELOG.md",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-angular": "^17.0.3",
    "@discordjs/ts-docgen": "^0.4.1",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typedoc": "^0.23.2",
    "typescript": "^4.6.4"
  },
  "packageManager": "yarn@3.2.1",
  "dependencies": {
    "@types/react": "^18.0.14"
  }
}
