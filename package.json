{
  "name": "@textea/shared",
  "version": "0.9.0",
  "type": "module",
  "description": "Type definitions for Textea packages",
  "license": "MIT",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./sheet": {
      "types": "./dist/sheet/index.d.mts",
      "import": "./dist/sheet/index.mjs"
    },
    "./api": {
      "types": "./dist/api/index.d.mts",
      "import": "./dist/api/index.mjs"
    },
    "./theme": {
      "types": "./dist/theme/index.d.mts",
      "import": "./dist/theme/index.mjs"
    },
    "./python": {
      "types": "./dist/python/index.d.mts",
      "import": "./dist/python/index.mjs"
    }
  },
  "repository": "https://github.com/TexteaInc/shared",
  "bugs": {
    "url": "https://github.com/TexteaInc/shared/issues"
  },
  "homepage": "https://github.com/TexteaInc/shared#readme",
  "files": [
    "dist"
  ],
  "scripts": {
    "postinstall": "npx npm-install-peers",
    "build": "tsc",
    "build:dev": "tsc -w",
    "doc": "typedoc --json docs/typedoc-out.json src/index.ts && node scripts/docs-build.mjs",
    "prepare": "husky install",
    "lint:check": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write .",
    "changelog": "git-cliff --output CHANGELOG.md",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "@mui/material": ">=5.8.7",
    "@types/react": ">=18.0.15"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-angular": "^17.0.3",
    "@discordjs/ts-docgen": "^0.4.1",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "typedoc": "^0.23.2",
    "typescript": "^4.7.4"
  },
  "packageManager": "yarn@3.2.1"
}
